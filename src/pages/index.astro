---
import Layout from "../layouts/Layout.astro";

import Nav from "../components/Nav";
import { formLink, gradient, gradientText } from "../util/utils";
import Card from "../components/Card";
---

<Layout
	title="APEX - The One Stop Growth Agency"
	description="APEX Solutions landing page, the agency for Web Design, On-Page SEO, Google SEM and Cold outreach"
>
	<Nav client:load />
	<section
		class="bg-[url(/bg-for-site.png)] bg-[#1e201f] bg-no-repeat bg-cover text-white utsm:px-8 sm:px-24 md:px-36 lg:px-48 xl:px-56 py-48 h-fit text-center font-extrabold min-h-[100vh] w-full flex flex-col justify-center items-center"
	>
		<h1 class="text-4xl sm:text-5xl xl:text-6xl">
			<span class={gradientText}>Increase</span> your outreach efforts and
			gain effortless results with us!
		</h1>
		<h2 class="text-3xl sm:text-4xl xl:text-4xl text-zinc-300 mb-8">
			Book atleast 4 extra sales calls per month or you <span
				class={gradientText}>DO&#160;NOT</span
			><span
				class={gradient +
					" bg-clip-padding h-1 utmd:-mb-4  utsm:-ml-[7.125rem] utsm:w-[7rem] sm:w-[8.25rem] md:w-[8.25rem] absolute mt-10 -ml-[8.5rem] inline-flex"}
			></span> pay.
		</h2>

		<script
			src="https://fast.wistia.com/embed/medias/7x8ybj2y9s.jsonp"
			async></script>
		<script src="https://fast.wistia.com/assets/external/E-v1.js" async
		></script>
		<div
			class="wistia_responsive_padding flex justify-center"
			style="padding:56.25% 0 0 0;position:relative;width:100%;max-width: 120rem;"
		>
			<div
				class="wistia_responsive_wrapper"
				style="height:100%;left:0;position:absolute;top:0;width:100%; max-width: 120rem;"
			>
				<div
					class="wistia_embed wistia_async_7x8ybj2y9s seo=false videoFoam=true"
					style="height:100%;position:relative;width:100%"
				>
					<div
						class="wistia_swatch"
						style="height:100%;left:0;opacity:0;overflow:hidden;position:absolute;top:0;transition:opacity 200ms;width:100%;"
					>
						<img
							src="https://fast.wistia.com/embed/medias/7x8ybj2y9s/swatch"
							style="filter:blur(5px);height:100%;object-fit:contain;width:100%;"
							alt=""
							aria-hidden="true"
							onload="this.parentNode.style.opacity=1;"
						/>
					</div>
				</div>
			</div>
		</div>
	</section>

	<main class="relative p-4 bg-[gradient] text-center w-full h-auto">
		<div class="-mt-48 relative">
			<h2 class="font-bold text-2xl my-4 max-w-48 text-white">
				Use Proven Cold Email Outreach To Get B2B Meetings On Demand
			</h2>
			<Card header="Why Work With Us?" className="max-w-[32rem]">
				Using proven methods and an EXTREMELY analytical approach we
				will iteratively produce better and better results This will
				save you time to focus on working on your busines, increase
				revenue and get great results.
				<div class="h-[1px] w-full bg-zinc-300 my-4"></div>
				<div class="relative z-20">
					<div class="flex flex-col items-center gap-2">
						<h3 class="text-center text-2xl font-bold">
							Not Convinced?
						</h3>
						<span class="text-lg font-semibold"
							>Fill in the form below and we will get back to you.</span
						>
						<button
							class="bg-secondaryDarkGreen rounded-full flex items-center text-white h-16 w-36 text-xl font-extrabold"
							><span class="mx-auto">Click Here</span>
						</button>
						<!-- temporary use a  -->
					</div>
				</div>
			</Card>

			<div class="text-center mt-6 font-bold text-2xl">Otherwise</div>
			<h3 class="text-2xl font-bold text-center md:-mb-12">
				Book a Free Discovery Meeting Here
			</h3>

			<!-- fix account on Calendly -->
			<div
				class="calendly-inline-widget mb-24"
				class=""
				data-url="https://calendly.com/tarekccc42/15min?background_color=FFFFFF80&hide_event_type_details=1&hide_gdpr_banner=1&primary_color=1ed94f"
				style="min-width:320px;height:700px;"
			>
			</div>
			<script
				type="text/javascript"
				src="https://assets.calendly.com/assets/external/widget.js"
				async></script>
		</div>

		<div
			class="absolute brightness-150 -right-56 w-1/2 h-[50vw] min-w-[28em] min-h-[28rem] rotate-270 mix-blend-darken bg-center bg-cover bg-[url(bwooowww.png)] top-0"
		>
		</div>
	</main>
	<div
		class="bg-black text-white font-semibold sm:px-24 py-12 w-full h-56 utsm:h-96"
	>
		Footer
	</div>
</Layout>
